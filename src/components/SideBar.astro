---

<aside
  class={`w-[500px] bg-white border-l border-gray-200 p-6 overflow-y-auto ${className}`}
>
  <!-- Who to Follow Section -->
  <div class="mb-8">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Who to Follow</h3>
    <div class="space-y-4">
      {
        franProfiles.slice(0, 5).map((profile) => (
          <div class="flex items-center space-x-3 p-3 hover:bg-gray-50 rounded-lg transition-colors cursor-pointer">
            <div class="relative flex-shrink-0">
              <img
                src={profile.avatar}
                alt={profile.name}
                class="h-12 w-12 rounded-full object-cover"
              />
              {profile.online && (
                <div class="absolute -bottom-1 -right-1 h-3 w-3 bg-green-500 rounded-full border-2 border-white" />
              )}
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center space-x-1 mb-1">
                <span class="font-semibold text-gray-900 truncate">
                  {profile.name}
                </span>
                {profile.verified && (
                  <svg
                    class="h-4 w-4 text-blue-500 flex-shrink-0"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
              </div>
              <p class="text-sm text-gray-500 truncate">{profile.username}</p>
              <p class="text-sm text-gray-600 mt-1 line-clamp-3">
                {profile.bio}
              </p>
              <p class="text-xs text-gray-500 mt-1">
                {profile.followers} followers
              </p>
            </div>
            <button class="bg-pink-500 text-white hover:bg-pink-600 px-4 py-1.5 text-sm font-medium rounded-full transition-colors flex-shrink-0">
              Follow
            </button>
          </div>
        ))
      }
    </div>
    <button
      class="w-full text-pink-600 hover:text-pink-700 text-sm font-medium mt-4 transition-colors"
    >
      Show more
    </button>
  </div>

  <!-- Trending Topics -->
  <div class="mb-8">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Trending</h3>
    <div class="space-y-3">
      {
        trendingTopics.map((topic) => (
          <div class="p-3 hover:bg-gray-50 rounded-lg transition-colors cursor-pointer">
            <p class="font-semibold text-gray-900">{topic.topic}</p>
            <p class="text-sm text-gray-500">{topic.posts}</p>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Premium Content Promo -->
  <div
    class="bg-gradient-to-r from-pink-500 to-purple-600 rounded-lg p-4 text-white"
  >
    <h4 class="font-bold text-lg mb-2">Unlock Premium Fran Content</h4>
    <p class="text-sm mb-3 opacity-90">
      Get exclusive access to Fran's most intimate moments, secret recipes, and
      behind-the-scenes action!
    </p>
    <button
      class="w-full bg-white text-pink-600 hover:bg-gray-100 px-4 py-2 text-sm font-medium rounded-full transition-colors"
    >
      Subscribe Now - $9.99/month
    </button>
  </div>

  <!-- Footer Links -->
  <div class="mt-8 pt-6 border-t border-gray-200">
    <div class="flex flex-wrap gap-2 text-xs text-gray-500">
